{
  "version": 2,
  "name": "bird-bones-website",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/comments",
      "dest": "/api/comments.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.(?:png|jpg|jpeg|gif|svg|css|js|woff|woff2|eot|ttf|webp|webmanifest|json))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}
